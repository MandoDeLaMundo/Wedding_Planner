@model LoginUser

<h3 clss="text-center">Login</h3>
<hr />

<form asp-controller="Home" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span
        asp-validation-for="LoginEmail"
        class="text-danger font-weight-bold"
        ></span>
        <input asp-for="LoginEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span
        asp-validation-for="LoginPassword"
        class="text-danger font-weight-bold"
        ></span>
        @* prefill password for testing for easy register & login *@
        <input asp-for="LoginPassword" class="form-control" value="asdfasdf" />
    </div>

    <button class="btn btn-outline-success">Login</button>
</form>